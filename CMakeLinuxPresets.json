{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "binaryDir": "build/${presetName}",
            "generator": "Ninja Multi-Config"
        },
        {
            "name": "linux",
            "inherits": "default",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            }        
        },
        {
            "name": "linux-gcc",
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            }        
        },
        {
            "name": "wasm",
            "inherits": "default",
            "displayName": "Emscripten",
            "toolchainFile": "$env{HOME}/github/emsdk/upstream/emscripten/cmake/Modules/Platform/Emscripten.cmake",
            "cacheVariables": {
                "WASMExamples_OPTIMIZATION": "BEST",
                "WASMExamples_COMPILE_OPTIMIZATION": "BEST",
                "WASMExamples_DEBUG": "NONE"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "Debug",
            "configurePreset": "linux",
            "configuration": "Debug"
        },
        {
            "name": "Release",
            "configurePreset": "linux",
            "configuration": "Release"
        },
        {
            "name": "Asan",
            "configurePreset": "linux",
            "configuration": "Asan"
        },
        {
            "name": "Debug-gcc",
            "configurePreset": "linux-gcc",
            "configuration": "Debug"
        },
        {
            "name": "Release-gcc",
            "configurePreset": "linux-gcc",
            "configuration": "Release"
        },
        {
            "name": "Asan-gcc",
            "configurePreset": "linux-gcc",
            "configuration": "Asan"
        }
    ],
    "testPresets": [
        {
            "name": "core-test",
            "description": "Enable output on failure",
            "configurePreset": "linux",
            "output": {
                "outputOnFailure": true
            }
        }
    ]
}
